<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:my="urn:import:com.shastram.client"
  >
  <ui:style field="css" src="Style.css" />
    
  <g:HorizontalPanel width="90%" horizontalAlignment="ALIGN_CENTER">
    <g:VerticalPanel spacing="15">
     <!-- BEGIN Editor/Simulator Window -->
      <g:Label addStyleNames="{css.mainLabel}">Web based 8085
        Microprocessor Simulator</g:Label>
      <g:HTMLPanel>
          <a href="/terms-of-service.html"
            onClick="_gaq.push(['_trackEvent', 'TermsOfService', 'Click', 'Read']);">
            Read the terms of service before using this app.</a>
          <br></br>
          <a href="mailto:kumar__v@hotmail.com"
            onClick="_gaq.push(['_trackEvent', 'EmailMe', 'Click', 'SendEmail']);">
            Email me </a>
          &nbsp;&nbsp;
          <a href="/help/index.html" 
            onClick="_gaq.push(['_trackEvent', 'HelpOnInstructions', 'Click', 'Read']);">
            Help for 8085 Instructions</a>
      </g:HTMLPanel>
      <g:Label ui:field="statusUpdateLabel"></g:Label>
      <g:MenuBar addStyleNames="{css.menubarItem}" ui:field="menuBar">
        <g:MenuItem ui:field="examplesMenuItem" text="Examples">
          <g:MenuBar vertical="true" ui:field="exampleItems"></g:MenuBar>
        </g:MenuItem>
        <g:MenuItem text="File">
            <g:MenuBar vertical="true">
                <g:MenuItem addStyleNames="{css.menubarItem}" ui:field="saveToBoxNet">Save to Box.net</g:MenuItem>
            </g:MenuBar>
        </g:MenuItem>
        </g:MenuBar>
      <g:VerticalPanel width="100%">
        <g:HorizontalPanel width="100%">
          <g:VerticalPanel spacing="1" width="100%">
            <g:HorizontalPanel width="100%">
              <g:Label addStyleNames="{css.bigLabel}">Enter code here</g:Label>
              <g:Label addStyleNames="{css.bigFileNameLabel}"
                ui:field="optionalFileName"></g:Label>
            </g:HorizontalPanel>
            <g:TextArea ui:field="sourceCode" width="100%"
              height="250px" addStyleNames="{css.sourceCodeWindow}"></g:TextArea>
          </g:VerticalPanel>
        </g:HorizontalPanel>
        <g:VerticalPanel width="100%">
          <g:Button ui:field="compile" addStyleNames="{css.debugButton}">Compile</g:Button>
          <g:Label height="10px"></g:Label>
        </g:VerticalPanel>
        <g:VerticalPanel width="100%">
          <g:Label addStyleNames="{css.bigLabel}">Output</g:Label>
          <g:TextArea ui:field="errorWindow" width="100%"
            height="80px"></g:TextArea>
        </g:VerticalPanel>

        <g:VerticalPanel addStyleNames="{css.border}"
          spacing="8">
          <g:HorizontalPanel width="100%">
            <g:HorizontalPanel>
              <g:VerticalPanel>
                <g:HorizontalPanel>
                  <g:VerticalPanel>
                    <g:HorizontalPanel>
                      <g:Label addStyleNames="{css.bigLabel}">Memory Window</g:Label>
                      <g:Label width="15px"></g:Label>
                      <!-- <g:CheckBox ui:field="memoryFollowIp" checked="true">Follow 
                        Ip</g:CheckBox> -->
                    </g:HorizontalPanel>
                    <g:Button width="100%" addStyleNames="{css.scrollButton}"
                      ui:field="memoryScrollUp">Up</g:Button>
                    <g:HorizontalPanel addStyleNames="{css.memoryWindow}"
                      horizontalAlignment="ALIGN_CENTER" width="100%">
                      <g:VerticalPanel ui:field="memoryWindowAddress"
                        spacing="0"></g:VerticalPanel>
                      <g:VerticalPanel ui:field="memoryWindow"
                        spacing="0"></g:VerticalPanel>
                    </g:HorizontalPanel>
                    <g:Button width="100%" addStyleNames="{css.scrollButton}"
                      ui:field="memoryScrollDown">Down</g:Button>
                  </g:VerticalPanel>
                  <g:Label width="15px"></g:Label>
                  <g:VerticalPanel>
                    <g:Label addStyleNames="{css.bigLabel}">Stack</g:Label>
                    <g:HorizontalPanel addStyleNames="{css.stackWindow}"
                      horizontalAlignment="ALIGN_CENTER" width="100%">
                      <g:VerticalPanel ui:field="stackWindowAddress"
                        spacing="0"></g:VerticalPanel>
                      <g:VerticalPanel ui:field="stackWindow"
                        spacing="0"></g:VerticalPanel>
                    </g:HorizontalPanel>
                  </g:VerticalPanel>
                </g:HorizontalPanel>
              </g:VerticalPanel>
            </g:HorizontalPanel>
          </g:HorizontalPanel>

          <g:HorizontalPanel width="100%">
            <g:VerticalPanel width="100%">
              <!-- Disassembly -->
              <g:Label addStyleNames="{css.bigLabel}">Disassembly</g:Label>
              <g:VerticalPanel addStyleNames="{css.border}">
                <g:VerticalPanel ui:field="disassemblyWindow">
                </g:VerticalPanel>
              </g:VerticalPanel>
            </g:VerticalPanel>
            <g:VerticalPanel spacing="10" width="100%"
              height="100%" verticalAlignment="ALIGN_MIDDLE">
              <g:Label width="40px"></g:Label>
              <g:Button ui:field="stepButton" addStyleNames="{css.debugButton}">Step</g:Button>
              <g:Button ui:field="stepOverButton" addStyleNames="{css.debugButton}">Step Over</g:Button>
              <g:Button ui:field="stepOutButton" addStyleNames="{css.debugButton}">Step Out</g:Button>
              <g:Button ui:field="breakButton" addStyleNames="{css.debugButton}">Break</g:Button>
              </g:VerticalPanel>
          </g:HorizontalPanel>

          <g:HorizontalPanel>
            <g:VerticalPanel spacing="3">
              <g:VerticalPanel width="100%">
                <g:Label addStyleNames="{css.bigLabel}">Registers</g:Label>
                <g:HorizontalPanel addStyleNames="{css.memoryWindow}"
                  ui:field="registerWindowValues" spacing="0"></g:HorizontalPanel>
                <g:Label height="7px"></g:Label>
                <g:HorizontalPanel width="200px"
                  addStyleNames="{css.memoryWindow}" ui:field="registerWindowValues2"
                  spacing="0"></g:HorizontalPanel>
              </g:VerticalPanel>

              <g:Label height="5px"></g:Label>
              <g:VerticalPanel>
                <g:Label addStyleNames="{css.bigLabel}">Flags</g:Label>
                <g:HorizontalPanel addStyleNames="{css.registerWindow}"
                  ui:field="flagValues" spacing="0"></g:HorizontalPanel>
              </g:VerticalPanel>
            </g:VerticalPanel>
          </g:HorizontalPanel>
        </g:VerticalPanel>
      </g:VerticalPanel>
           <!-- END Editor/Simulator Window -->
    </g:VerticalPanel>
  </g:HorizontalPanel>
</ui:UiBinder> 